{
  // Core
  "workbench.colorTheme": "Ayu Mirage",
  "workbench.fontAliasing": "auto",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.iconTheme": "material-icon-theme",
  "editor.fontFamily": "azukiFontL",
  "editor.fontSize": 17,
  "editor.scrollBeyondLastLine": false,
  "editor.smoothScrolling": true,
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": true,
  "editor.formatOnSave": true,
  "editor.cursorBlinking": "smooth",
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,

  "files.autoSave": "onFocusChange",

  // latex-workshop
  "latex-workshop.latex.magic.args": [
    "-synctex=1",
    "-interaction=nonstopmode",
    "-file-line-error",
    "%DOC%"
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "make pdf",
      "tools": ["platex"]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "platex",
      "command": "latexmk",
      "args": [
        "-e",
        "$latex=q/uplatex %O -synctex=1 -interaction=nonstopmode -file-line-error %S/",
        "-e",
        "$dvipdf=q/dvipdfmx %O -o %D %S/",
        "-norc",
        "-pdfdvi",
        "%DOC%"
      ]
    },
    {
      "name": "lualatex",
      "command": "lualatex",
      "args": ["%DOC%"]
    },
    {
      "name": "platex",
      "command": "latexmk",
      "args": [
        "-e",
        "$latex=q/platex %O -synctex=1 -interaction=nonstopmode -file-line-error %S/",
        "-e",
        "$bibtex=q/pbibtex %O %B/",
        "-e",
        "$biber=q/biber %O --bblencoding=utf8 -u -U --output_safechars %B/",
        "-e",
        "$makeindex=q/pmendex %O -o %D %S/",
        "-e",
        "$dvipdf=q/dvipdfmx %O -o %D %S/",
        "-norc",
        "-pdfdvi",
        "%DOC%"
      ]
    }
  ],
  "latex-workshop.latex.clean.fileTypes": [
    "*.aux",
    "*.bbl",
    "*.blg",
    "*.idx",
    "*.ind",
    "*.lof",
    "*.lot",
    "*.out",
    "*.toc",
    "*.acn",
    "*.acr",
    "*.alg",
    "*.glg",
    "*.glo",
    "*.gls",
    "*.ist",
    "*.fls",
    "*.log",
    "*.fdb_latexmk",
    "*.nav",
    "*.lol",
    "*.snm",
    "*.vrb",
    "__latexindent_temp.tex"
  ],
  "latex-workshop.latex.clean.enabled": true,
  "latex-workshop.view.pdf.viewer": "tab",

  "ctrlchar-remover.pattern": "[\\cA-\\cH\\cK-\\cL\\cN-\\cZ\\u001B-\\u001F\\u007F]",

  // Terminal
  "terminal.integrated.fontSize": 16,

  // Emmet
  "emmet.triggerExpansionOnTab": true,
  "emmet.syntaxProfiles": {
    "javascript": "jsx",
    "xml": {
      "attr_quotes": "single"
    }
  },

  // Git
  "git.autofetch": true,
  "git.confirmSync": false,

  "prettier.singleQuote": true,
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": true
  },
  "textlint.autoFixOnSave": true,
  "go.formatTool": "goimports",
  "go.coverOnSave": true,
  "vsdocker.imageUser": "docker.io/ayatk"
}
