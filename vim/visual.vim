set t_Co=256

" color scheme
syntax enable
" set background=light
" colorscheme solarized
" let g:solarized_termcolors=256
" let g:solarized_termtrans=1

" show line number
set number

" highlight cursor line
set cursorline
hi clear CursorLine

" show cursor place
set ruler

" enable search highlight
set hlsearch

set laststatus=2
